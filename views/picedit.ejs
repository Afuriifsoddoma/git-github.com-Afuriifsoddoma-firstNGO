<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile Image Form</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
   <style>
    /* Custom CSS styles */

    body {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      background-color: rgb(28, 105, 105);
    }

.container-fluid {
  position: relative;
}

/* Styling for the top-right anchor */
.top-right {
  position: absolute;
  top: 20px;
  right: 20px;
  color: #d73838;
  text-decoration: none;
}

/* Styling for the profile image and form */
.profile-container {
  position: relative;
  text-align: center;
  margin-top: 100px; /* Adjust this margin as needed */
}

.profile-img {
  width: 200px; /* Adjust image size */
  height: 200px; /* Adjust image size */
}

   </style>
</head>
<body>

  <div class="container-fluid">
    <!-- Top-right anchor -->
    <div class="row justify-content-center">
      <div class="col-md-6">
    <!-- Profile image and form -->
    <div class="profile-container text-center">
      <img src="../uploads/<%=image%>" class="rounded-circle profile-img" alt="Profile Image">
<form class="mt-3" action="/updateImage/<%=image%>" method="post" enctype="multipart/form-data" id="imageForm">
        <div class="form-group">
          <label for="imageUpload">Suuraa Haaraa Filachuuf</label>
          <input type="file" class="form-control-file" id="imageUpload" name="updatedImage" accept="image/*">
        </div>
        <button type="submit" class="btn btn-primary">Upload Image</button>
      </form>
    </div>
  </div>
  </div>
  </div>
  <a href="/editposts" class="top-right">Back</a>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
   <script>
     document.getElementById('imageForm').addEventListener('submit', function(event) {
  const fileInput = document.getElementById('imageUpload');
  const file = fileInput.files[0];

  if (!file) {
    alert('Please select an image file.');
    event.preventDefault(); // Prevents form submission
  } else if (file.size === 0) {
    alert('Empty file selected. Please choose another file.');
    event.preventDefault(); // Prevents form submission
  } else {
    // Image is chosen and not empty, form submission can proceed
    console.log('Image selected:', file.name);
    // Any further processing or form submission code can be added here
  }
});

   </script>
</body>
</html>



 